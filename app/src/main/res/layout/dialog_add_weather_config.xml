<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/config_add_image"
      android:layout_width="@dimen/weather_config_add_image_width"
      android:layout_height="@dimen/weather_config_add_image_height"
      android:layout_margin="@dimen/weather_config_add_image_margin"
      android:background="@drawable/jeep_logo"
      android:clickable="true"
      android:scaleType="centerCrop"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <EditText
        android:id="@+id/config_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Config Name"
        />

    <EditText
        android:id="@+id/config_temp_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Low Temp Threshold"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/config_temp_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="High Temp Threshold"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/config_precip_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precip Threshold"
        android:inputType="number"
        />
  </LinearLayout>

</LinearLayout>